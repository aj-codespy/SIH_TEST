<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login & Signup</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="styles.css">
</head>
<body>

<section class="vh-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark text-white" style="border-radius: 1rem;">
                    <div class="card-body pb-0 text-center">

                        <!-- Login Form -->
                        <div id="loginForm">
                            <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                            <p class="text-white-50 mb-5">Please enter your username and password!</p>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="usernameLogin">Username</label>
                                <input type="text" id="usernameLogin" class="form-control form-control-lg" required />
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="passwordLogin">Password</label>
                                <input type="password" id="passwordLogin" class="form-control form-control-lg" required />
                            </div>

                            <div id="loginError" class="text-danger mb-3" style="display: none;"></div>

                            <button class="btn btn-outline-light btn-lg px-5" id="loginBtn">Login</button>

                            <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!" id="toggleToSignup">Don't have an account? Sign Up</a></p>
                        </div>

                        <!-- Signup Form -->
                        <div id="signupForm" style="display:none;">
                            <h2 class="fw-bold mb-2 text-uppercase">Sign Up</h2>
                            <p class="text-white-50 mb-5">Please enter your details to register!</p>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="usernameSignup">Username</label>
                                <input type="text" id="usernameSignup" class="form-control form-control-lg" required />
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="emailSignup">Email</label>
                                <input type="email" id="emailSignup" class="form-control form-control-lg" required />
                                <div id="emailError" class="text-danger" style="display: none;"></div>
                            </div>

                            <div class="form-outline form-white mb-4">
                                <label class="form-label" for="passwordSignup">Password</label>
                                <input type="password" id="passwordSignup" class="form-control form-control-lg" required />
                            </div>

                            <div id="signupError" class="text-danger mb-3" style="display: none;"></div>

                            <button class="btn btn-outline-light btn-lg px-5" id="signupBtn">Sign Up</button>

                            <p class="small mb-5 pb-lg-2"><a class="text-white-50" href="#!" id="toggleToLogin">Already have an account? Login</a></p>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="script.js"></script>
</body>
</html>
